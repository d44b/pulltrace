FROM golang:1.22-alpine AS builder

RUN apk add --no-cache git

WORKDIR /src
COPY go.mod ./
RUN go mod tidy 2>/dev/null || true
COPY . .
RUN go mod tidy && go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /pulltrace-agent ./cmd/pulltrace-agent

FROM alpine:3.20
RUN apk add --no-cache ca-certificates
COPY --from=builder /pulltrace-agent /usr/local/bin/pulltrace-agent

USER 65534:65534
ENTRYPOINT ["pulltrace-agent"]
